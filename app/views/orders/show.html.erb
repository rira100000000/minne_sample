
<h1><%= @order.title %></h1>
<h2><%= @order.body %></h2>
<% if logged_in? %>
  <%= render '/suggestions/suggestion_form' %>
<% else %>
<div class=please_login>
  ログインして提案しましょう
</div>

<% end %>
<h3>提案一覧</h3>
<% @order.suggestions.each do |suggestion| %>
  <%= link_to suggestion.title, suggestion %><br>
<% end %>
