
<h1><%= @order.title %></h1>
<% if @order.images.attached? %>
  <% @order.images.each do |image| %>
    <%= link_to (image_tag display_image(image)) , image%>
  <% end %>
<% end %>
<h2><%= @order.body %></h2>

<%= render 'shared/tag_index' %>


<% if logged_in? %>
  <%= render '/suggestions/suggestion_form' %>
<% else %>
  <div class=please_login>
    ログインして提案しましょう
  </div>
<% end %>
<h3>提案一覧</h3>
<% @order.suggestions.each do |suggestion| %>
  <%= link_to image_tag(User.find(suggestion.user_id).avatar, class: "user_icon") %><%= link_to suggestion.title, suggestion %><br>
<% end %>
