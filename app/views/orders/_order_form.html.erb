<%= form_with(model: @order, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @order %>
  <div class='title_form'>
    <%= f.text_field :title,placeholder: "タイトルを入力してください",class: 'form-control' %>
  </div>
  <div class='body_form'>
    <%= f.text_area :body,placeholder: "詳細な依頼内容を記入してください", class: 'form-control' %>
  <span class="image">
    <%= f.file_field :images, multiple: true, accept: "image/jpeg,image/gif,image/png" %>
  </span>
  <div class="field">
    <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :name,value: @tag_list,class:"form-control"%>
  </div>
  
  <%= f.submit '依頼送信', class: "btn btn-primary" %>
<% end %>
