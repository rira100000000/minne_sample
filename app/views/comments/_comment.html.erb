<% user = User.find(comment.user_id)%>
<% if logged_in? && comment.user_id == current_user.id %>
  <div class="balloon-right">
    <div class="faceicon">
      <% if user.avatar.present? %>
        <%= image_tag user.avatar, class: "user_icon" %>
      <% end %>
    </div>
    <div class="chatting">
      <div class="says-right">
         <% if comment.images.attached? %>
          <% comment.images.each do |image| %>
            <%= link_to (image_tag display_image(image)) , image %>
          <% end %>
        <% end %>
        <%= comment.content %>
      </div>
    </div>
</div>
<% else %>
  <div class="balloon-left">
    <div class="faceicon">
      <% if user.avatar.present? %>
        <%= image_tag user.avatar, class: "user_icon" %>
      <% end %>
      <%= link_to user.name ,user ,class: 'user_name'%>

    </div>
    <div class="chatting">
      <div class="says-left">
         <% if comment.images.attached? %>
          <% comment.images.each do |image| %>
            <%= link_to (image_tag display_image(image)) , image %>
          <% end %>
        <% end %>
        <%= comment.content %>
      </div>
    </div>
  </div>
<% end %>
