<%= javascript_pack_tag 'icon_loader',media: 'all'%>
<%= render 'shared/error_messages', object: @user %>
<div class="row">
  <div class="center-block">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class='account-page__inner--icon'>
        <div class='account-page__inner--icon__label'>
        </div>
        <div class='account-page__inner--icon__input'>
          <%= image_tag '/uploads/user/image/upper_body.jpg', class: 'account-page__inner--icon__input__image', width: '100%' %>
          <div class='account-page__inner--icon__input__image2'></div>
          <%= f.file_field :avatar, class: 'account-page__inner--icon__input__btn', id: 'upload-icon' %>
        </div>
      </div>
    <div class='account-page__inner--user-form'>
      <div class='form-block'>
        <%= f.label 'ユーザー名' ,class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class='form-block'>
        <%= f.label 'メールアドレス' ,class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class='form-block'>
        <%= f.label 'パスワード' ,class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class='form-block'>  
        <%= f.label 'パスワード（確認用）' ,class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= f.submit 'アカウント作成', class: "btn-create" %>
  </div>
<% end %>