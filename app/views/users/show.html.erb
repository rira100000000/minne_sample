<% provide(@user) %>
<div class='row'>
  <div class='center-block'>
    <div class='prof-all'>
      <div class="prof-top">
        <% if @avatar.present? %>
          <%= image_tag @avatar, class: "user_icon" %>
        <% end %>
        <%= @user.name %>
      </div>
      <div class="prof-mid">
        <div class="prof-left">
          <div class='user_name'><%= @user.name %></div>
          <div class= follower>お気に入りされている作品 <span class='follower_number'>1000</span></div>
          <div class= follower>フォロワーしている <span class='follower_number'>1000</span></div>
          <div class= follower>フォローされている <span class='follower_number'>1000</span></div>
        </div>
        
        <div class="prof-center">
          <div class='profile'><%= safe_join(@user.profile.split("\n"),tag(:br))  if @user.profile %></div>
        </div>
        <div class="prof-right">
          <img src="data:image/png;base64,<%= @user.sample_img('eda1505bd04c7684d406ef4321388902a72256f0.jpg') %>" class="prof_img"/>
          <img src="data:image/png;base64,<%= @user.sample_img('5e4aa40946575dd749b0f679b046e75145682c42.jpg') %>" class="prof_img"/>
        </div>
      </div>
    </div>
  </div>
</div>