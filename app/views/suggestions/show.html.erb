<div class='back_link'>
  <%= link_to @order.title ,@order %>
</div>
<h1><%= @suggestion.title %></h1>
<% if @suggestion.images.attached? %>
  <% @suggestion.images.each do |image| %>
    <%= link_to (image_tag display_image(image)) , image%>
  <% end %>
<% end %>
<h2><%= @suggestion.body %></h2>


